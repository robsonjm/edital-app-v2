rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regra para a coleção 'users':
    // Permite que o usuário leia e escreva APENAS nos seus próprios dados.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Se houver outras coleções globais, adicione regras aqui.
    // Por exemplo, para permitir leitura pública de uma coleção 'configs':
    // match /configs/{doc} {
    //   allow read: if true;
    // }
  }
}
